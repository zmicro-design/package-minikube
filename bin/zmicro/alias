#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro minikube <args ...>"
  echo ""

  minikube --help
}

version() {
  minikube --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    minikube "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
